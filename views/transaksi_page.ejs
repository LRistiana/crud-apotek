        <script>
            $("#dataTable").on("click", ".button-update", function () {

                // ambil data
                let id = $(this).data("id");
                let nama_pembeli = $(this).data("namapembeli");
                let nama_penjual = $(this).data("namapenjual");
                let tanggal_transaksi = $(this).data("tanggal");
                let jenis_transaksi = $(this).data("jenis");
                let total_harga = $(this).data("total");

                // show modal
                $("#edit-modal").modal("show");

                // kirimkan valuenya
                $(".id").val(id);
                $(".nama_pembeli").val(nama_pembeli);
                $(".nama_penjual").val(nama_penjual);
                $(".tanggal_transaksi").val(tanggal_transaksi);
                console.log(tanggal_transaksi);
                $(".total_harga").val(total_harga);
                $("input[name='jenis_transaksi'][value='" + jenis_transaksi + "']").prop("checked", true);
            });

        </script>

        <script>
            var searchInput = document.getElementById('searchInput');
            var beli = document.getElementById('beli');
            var jual = document.getElementById('jual');


            beli.addEventListener('click', function (event) {
                event.preventDefault(); // Mencegah aksi default hyperlink
                // console.log(" beli tertekan");
                var searchValue = searchInput.value; // Mendapatkan nilai dari inputan form
                if (searchValue.trim() !== '') { // cek null
                    var url = "/transaksi?namabeli=" + encodeURIComponent(searchValue); // Membuat URL dengan nilai search
                    // Redirect ke URL yang ditentukan
                    window.location.href = url;
                }
            });
            jual.addEventListener('click', function (event) {
                event.preventDefault(); // Mencegah aksi default hyperlink

                var searchValue = searchInput.value; // Mendapatkan nilai dari inputan form
                if (searchValue.trim() !== '') { // cek null
                    var url = "/transaksi?namajual=" + encodeURIComponent(searchValue); // Membuat URL dengan nilai search
                    // Redirect ke URL yang ditentukan
                    window.location.href = url;
                }
            });
            
        </script>

