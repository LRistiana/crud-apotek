<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/transaksi?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama Pembeli</label>
            <input 
                type="text" 
                class="form-control nama_pembeli" 
                id="nama_pembeli" 
                name="nama_pembeli" 
                placeholder="Masukan nama"
              required />
          </div>
          <div class="form-group">
            <label for="name">Nama Penjual</label>
            <input type="text" class="form-control nama_penjual" id="nama_penjual" name="nama_penjual" placeholder="Masukan Nama"
              required />
          </div>
          <div class="form-group">
            <label for="name">Tanggal Transaksi</label>
            <input type="date" class="form-control tanggal_transaksi" id="tanggal_transaksi" name="tanggal_transaksi"
              placeholder="Masukan Tanggal Transaksi" required />
          </div>
          <div class="form-group">
            <label for="name">Jenis Transaksi</label>
            <div class="radio inline">
              <input type="radio" name="jenis_transaksi" id="pembelian" value="pembelian">
              <label for="pembelian">Pembelian</label>
            </div>
            <div class="radio inline">
              <input type="radio" name="jenis_transaksi" id="penjualan" value="penjualan">
              <label for="pembelian">Penjualan</label>
            </div>
          </div>
          <div class="form-group">
            <label for="name">Total</label>
            <input type="text" class="form-control total_harga" id="total_harga" name="total_harga" readonly
              class="form-control-plaintext" value=0 placeholder="Masukan No Telepon" required />
              <p>total harga akan disesuaikan dengan products yang dimasukkan ke dalam transaksi</p>
          </div>
        </div>
        <div class="modal-footer">
            <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>