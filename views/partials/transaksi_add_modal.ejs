<!-- Modal penjualan-->
<div class="modal fade" id="add-modal-penjualan" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Transaksi Penjualan</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/transaksi" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama Pembeli</label>
            <select name="nama_pembeli" class="custom-select" id="nama_pembeli">
              <% for( let i = 0; i < customer.length; i++ ) { %>
                <option value="<%= customer[i].nama %>"><%= customer[i].nama %></option>
              <% } %>
            </select>
            <!-- <input type="text" class="form-control" id="nama_pembeli" name="nama_pembeli" placeholder="Masukan nama"
              required /> -->
          </div>
          <div class="form-group">
            <label for="name">Nama Penjual</label>
            <input type="text" class="form-control" id="nama_penjual" name="nama_penjual" readonly
              class="form-control-plaintext" value="<%= username %>" placeholder="Masukan Nama Peenjual" required />
            <!-- <input type="text" class="form-control" id="nama_penjual" name="nama_penjual" placeholder="Masukan Nama"
              required /> -->
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control tanggal_transaksi" id="tanggal_transaksi" name="tanggal_transaksi"
              placeholder="Masukan Tanggal Transaksi" required />
          </div>
          <!-- <div class="form-group">
            <label for="name">Jenis Transaksi</label>
