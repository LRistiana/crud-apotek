<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-outline-success btn-sm" data-toggle="modal" data-target="#add-modal">
        <i class="fa-solid fa-user"></i>
        Tambah user
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr class="text-center">
              <th>No</th>
              <th>Nama</th>
              <th>Password</th>
              <th>Umur</th>
              <th>Email</th>
              <th>No Telepon</th>
              <th>Alamat</th>
              <th>Tipe User</th>
              <th style="width: 150px;" class="text-right">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < user.length; i++){ %>
              <tr>
                <td>
                  <%= i + 1 %>
                </td>
                <td>
                  <%= user[i].nama %>
                </td>
                <td>
                  <%= user[i].password %>
                </td>
                <td>
                  <%= user[i].umur %>
                </td>
                <td>
                  <%= user[i].email %>
                </td>
                <td>
                  <%= user[i].no_telp %>
                </td>
                <td>
                  <%= user[i].alamat %>
                </td>
                <td>
                  <%= user[i].userType %>
                </td>
                <td class="text-right">
                    <!-- ambil id -->
                  <form action="/user/<%= user[i].id %>?_method=DELETE" 
                    method="POST">

                    <!-- ambil data untuk modals -->
                  <a href="javascript:void()" class="btn btn-outline-warning btn-sm button-update"
                    data-id="<%= user[i].id %>" 
                    data-nama="<%= user[i].nama %>"
                    data-password="<%= user[i].password %>"
                    data-umur="<%= user[i].umur %>" 
                    data-email="<%= user[i].email %>"
                    data-no_telp="<%= user[i].no_telp %>" 
                    data-alamat="<%= user[i].alamat %>"
                    data-type="<%= user[i].userType %>">
                    
                    <!-- edit data i-->
                    <i class="fa-solid fa-pen-to-square"></i>Edit</a>

                    <!-- hapus data i -->
                  <button type="submit" class="btn btn btn-danger btn-sm" onclick="return confirm('Anda Yakin?');"><i
                      class="fa-solid fa-trash-can"></i></button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>